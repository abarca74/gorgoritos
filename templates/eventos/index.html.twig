{% extends 'base.html.twig' %}

{% block title %}Eventos index{% endblock %}

{% block body %}
    
    
    <h1>Eventos index</h1>
   
  
    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nombre</th>
                <th>Fecha</th>
                <th>Hora</th>
                <th>PlazasTotales</th>
                <th>PlazasOcupadas</th>
                <th>LugarEvento</th>
                <th>Direccion</th>
                <th>Precio</th>
                <th>Descripcion</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for evento in eventos %}
            <tr>
                <td>{{ evento.id }}</td>
                <td>{{ evento.nombre }}</td>
                <td>{{ evento.fecha ? evento.fecha|date('Y-m-d') : '' }}</td>
                <td>{{ evento.hora ? evento.hora|date('H:i:s') : '' }}</td>
                <td>{{ evento.plazasTotales }}</td>
                <td>{{ evento.plazasOcupadas }}</td>
                <td>{{ evento.lugarEvento }}</td>
                <td>{{ evento.direccion }}</td>
                <td>{{ evento.precio }}</td>
                <td>{{ evento.descripcion }}</td>
                <td>
                    <a href="{{ path('app_eventos_show', {'id': evento.id}) }}">show</a>
                    <a href="{{ path('app_eventos_edit', {'id': evento.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="11">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_eventos_new') }}">Create new</a>
{% endblock %}
