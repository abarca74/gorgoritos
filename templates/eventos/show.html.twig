{% extends 'base.html.twig' %}

{% block title %}Eventos{% endblock %}

{% block body %}
    <h1>Eventos</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ evento.id }}</td>
            </tr>
            <tr>
                <th>Nombre</th>
                <td>{{ evento.nombre }}</td>
            </tr>
            <tr>
                <th>Fecha</th>
                <td>{{ evento.fecha ? evento.fecha|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>Hora</th>
                <td>{{ evento.hora ? evento.hora|date('H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>PlazasTotales</th>
                <td>{{ evento.plazasTotales }}</td>
            </tr>
            <tr>
                <th>PlazasOcupadas</th>
                <td>{{ evento.plazasOcupadas }}</td>
            </tr>
            <tr>
                <th>LugarEvento</th>
                <td>{{ evento.lugarEvento }}</td>
            </tr>
            <tr>
                <th>Direccion</th>
                <td>{{ evento.direccion }}</td>
            </tr>
            <tr>
                <th>Precio</th>
                <td>{{ evento.precio }}</td>
            </tr>
            <tr>
                <th>Descripcion</th>
                <td>{{ evento.descripcion }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_eventos_index') }}">back to list</a>

    <a href="{{ path('app_eventos_edit', {'id': evento.id}) }}">edit</a>

    {{ include('eventos/_delete_form.html.twig') }}
{% endblock %}
